<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/space_30dp"
            android:paddingEnd="@dimen/space_30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Halo,"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-black"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="35sp"
                android:textColor="#4E4E4E"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teman PERISAI !"
                android:fontFamily="sans-serif-black"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="35sp"
                android:textColor="#4E4E4E"/>
            <ImageView
                android:layout_width="233dp"
                android:layout_height="266dp"
                android:src="@drawable/final_logo"
                android:layout_gravity="center"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:text="Semoga hari berjalan dengan baik baik saja ya! Yuk sign in dulu!"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textColor="#4E4E4E"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sign_in_button"
                android:layout_width="270dp"
                android:layout_gravity="center"
                android:text="Sign in with Google"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:padding="15dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/googleg_standard_color_18"
                android:backgroundTint="#F6416C"
                android:background="@drawable/bg_login_btn"
                android:layout_height="55dp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Penggunaan aplikasi ini diatur oleh"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#6B5E5E"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Persyaratan Layanan dan Kebijakan Privasi"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#0386D0"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>